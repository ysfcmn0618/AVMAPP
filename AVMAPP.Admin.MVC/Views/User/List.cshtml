@model UserListViewModel

<h2>Kullanıcı Listesi</h2>

<form method="get" asp-action="List" class="row g-3 mb-4">
    <div class="col-md-3">
        <input type="text" name="Filter.Name" value="@Model.Filter.Name" class="form-control" placeholder="Ad Soyad">
    </div>
    <div class="col-md-3">
        <input type="email" name="Filter.Email" value="@Model.Filter.Email" class="form-control" placeholder="Email">
    </div>
    <div class="col-md-2">
        <select name="Filter.EmailConfirmed" class="form-select">
            <option value="">Email Durumu</option>
            <option value="true" selected="@(Model.Filter.EmailConfirmed == true)">Onaylı</option>
            <option value="false" selected="@(Model.Filter.EmailConfirmed == false)">Onaysız</option>
        </select>
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary">Filtrele</button>
    </div>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Email Onay</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Role?.Name</td>
                <td>@(user.EmailConfirmed ? "Onaylı" : "Onaysız")</td>
                <td>
                    <a asp-action="Edit" asp-route-userId="@user.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-userId="@user.Id" class="btn btn-danger btn-sm"
                       onclick="return confirm('Bu kullanıcıyı silmek istediğinize emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
